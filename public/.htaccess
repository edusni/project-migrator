# Enable rewrite engine
RewriteEngine On

# SPA fallback - redirect all requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]

# Enable compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json image/svg+xml
</IfModule>

# Cache static assets with content hashes for 1 year
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Vite build assets (hashed filenames) - 1 year
  <FilesMatch "\.(js|css)$">
    ExpiresDefault "access plus 1 year"
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Images - 1 year
  <FilesMatch "\.(webp|jpg|jpeg|png|gif|ico|svg)$">
    ExpiresDefault "access plus 1 year"
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Fonts - 1 year
  <FilesMatch "\.(woff|woff2|ttf|eot)$">
    ExpiresDefault "access plus 1 year"
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # HTML - 1 hour with revalidation
  <FilesMatch "\.html$">
    ExpiresDefault "access plus 1 hour"
    Header set Cache-Control "public, max-age=3600, stale-while-revalidate=86400"
  </FilesMatch>
  
  # SEO files - 1 day
  <FilesMatch "(sitemap\.xml|robots\.txt|llms\.txt)$">
    ExpiresDefault "access plus 1 day"
    Header set Cache-Control "public, max-age=86400"
  </FilesMatch>
  
  # Manifest - 1 day
  <FilesMatch "manifest\.webmanifest$">
    ExpiresDefault "access plus 1 day"
    Header set Cache-Control "public, max-age=86400"
  </FilesMatch>
</IfModule>

# Fallback for servers without mod_expires
<IfModule mod_headers.c>
  # Assets folder
  <FilesMatch "^assets/">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Service worker - no cache
  <FilesMatch "(sw\.js|registerSW\.js)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>

# Security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Correct MIME types
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType text/css .css
  AddType image/webp .webp
  AddType image/svg+xml .svg
  AddType application/manifest+json .webmanifest
  AddType font/woff2 .woff2
</IfModule>
