# Cache static assets for 1 year (immutable)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 year
*.webp
  Cache-Control: public, max-age=31536000, immutable

*.png
  Cache-Control: public, max-age=31536000, immutable

*.jpg
  Cache-Control: public, max-age=31536000, immutable

*.jpeg
  Cache-Control: public, max-age=31536000, immutable

*.svg
  Cache-Control: public, max-age=31536000, immutable

*.ico
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
*.woff
  Cache-Control: public, max-age=31536000, immutable

*.woff2
  Cache-Control: public, max-age=31536000, immutable

# Cache CSS and JS for 1 year (Vite adds hash to filenames)
*.css
  Cache-Control: public, max-age=31536000, immutable

*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache HTML for 1 hour (needs to be fresh for SPA routing)
*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Root index - short cache
/
  Cache-Control: public, max-age=3600, must-revalidate

# Service worker - no cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

/registerSW.js
  Cache-Control: no-cache, no-store, must-revalidate

# Manifest - medium cache
/manifest.webmanifest
  Cache-Control: public, max-age=86400

# Sitemap and robots - medium cache
/sitemap.xml
  Cache-Control: public, max-age=86400

/robots.txt
  Cache-Control: public, max-age=86400

# LLM files - medium cache
/llms.txt
  Cache-Control: public, max-age=86400

/llm*.html
  Cache-Control: public, max-age=86400
